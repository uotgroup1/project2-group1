<section>
    <div class="container main-survey-sec">
        <div class="update-surveys">
            <h2>U<span>PDATE</span> Y<span>OUR</span> S<span>URVEY</span></h2>
        </div>
    </div>
        <div class="row new-survey-box">
            <form class="col-7 new-survey-form">
                <label for="surv-name">Enter your survey name: </label>
                <input type="text" name="surv-name" id="surv-name" class="form-control" value="{{survey.newSurveyName}}"/>
                <label for="question">Question:</label>
                <textarea name="question" id="question" class="form-control">"{{survey.newSurveyQuestion}}"</textarea>
                <label for="option">Option 1: </label>
                <input type="text" name="option" id="optionone" class="form-control" value="{{survey.Option1}}"/>
                <label for="option">Option 2: </label>
                <input type="text" name="option" id="optiontwo" class="form-control" value="{{survey.Option2}}"/>
                <label for="option">Option 3: </label>
                <input type="text" name="option" id="optionthree" class="form-control" value="{{survey.Option3}}"/>
                <label for="option">Option 4: </label>
                <input type="text" name="option" id="optionfour" class="form-control" value="{{survey.Option4}}"/>
            </form>
            <div class="col-4 next-steps">
                <h3>Click below to Save Survey</h3>
                <br>
                {{!-- <button class="addQuestion" id="add-quest-btn">Add Question</button>
                <button id="addOpt-btn">Add Option</button> --}} 
                <button type="submit" id="save-surv-btn" class="newsurvey-btn btn-warning btn"><i class="material-icons-sharp " >save</i> Save Survey</button>
                <button type="submit" id="delete-surv-btn" class="newsurvey-btn btn-warning btn"><i class="material-icons-sharp">delete</i> Delete Survey</button>
            </div>
        </div>
    </div>
</section>
